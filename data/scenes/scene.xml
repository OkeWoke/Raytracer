<Config threads="12" max_reflections="4" samplesPP="30" stretch="gamma"/>

<Camera w="0.5" h="0.5" H_Res="800" V_Res="800" fl="3" aperture="0.001" focus_dist="13.5">
    <position x="0" y="-1" z="15"/><!-- Camera position -->

    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="0"/> <!-- roll -->
</Camera>

<Mesh filename="skull_tri.obj" brdf="PHONG_DIFFUSE">
<position x="0.5" y="-1.15" z="2"/>
<x_rot angle="-5"/> <!-- Tilt  + is down, - is up -->
<y_rot angle="155"/>  <!-- pan -->
<z_rot angle="180"/> <!-- roll -->
<scale factor=".01"/> <!-- This scales the model up by factor -->
<color r="200" g="5" b="5"/>
<texture filename ="space.png"/>
</Mesh>

<Sphere radius = "0.2" brdf="MIRROR" reflectivity = "1.0">
<position x="-0.2" y="-2.3" z="2"/>
<color r="200" g="200" b="200"/>
</Sphere>


<Sphere radius = "0.6" brdf="PHONG_DIFFUSE">
<position x="-0.9" y="-1.8" z="2"/>
<color r="255" g="255" b="255"/>
</Sphere>



<!-- top emissive plane area light-->
<Plane w="1" l="1" brdf="PHONG_DIFFUSE">
    <position x="0" y="0.29" z="4"/>
    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="180"/> <!-- roll -->
    
    <color r="1" g="1" b="1"/>
    <emission r="100000" g="100000" b="100000"/>
</Plane>

        <!-- top  plane -->
<Plane w="150" l="150" brdf="PHONG_DIFFUSE">
<position x="0" y="0.3" z="2"/>
<x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
<y_rot angle="0"/> <!-- pan -->
<z_rot angle="180"/> <!-- roll -->
<color r="255" g="255" b="255"/>
</Plane>

<!-- back Plane -->
<Plane w="15" l="15" brdf="PHONG_DIFFUSE">
    <position x="0" y="0" z="-1"/>
    <x_rot angle="90"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="0"/> <!-- roll -->

    <color r="255" g="255" b="255"/>
</Plane>

<!-- left Plane -->
<Plane w="55" l="55" brdf="PHONG_DIFFUSE">
    <position x="-1.5" y="0" z="0"/>
    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="-90"/> <!-- roll -->

    <color r="155" g="65" b="25"/>
</Plane>

<!-- Right Plane -->
<Plane w="50" l="50" brdf="PHONG_DIFFUSE">
    <position x="1.5" y="0" z="0"/>
    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="90"/> <!-- roll -->

    <color r="30" g="155" b="50"/>
</Plane>

<!-- bottom Plane -->
<Plane w="50" l="50" brdf="PHONG_DIFFUSE">
    <position x="0" y="-2.5" z="0"/>
    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="0"/> <!-- roll -->

    <color r="200" g="200" b="200"/>
</Plane>

<!-- top plane -->
<Plane w="8" l="8" brdf="PHONG_DIFFUSE">
    <position x="0" y="1" z="0"/>
    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="180"/> <!-- roll -->

    <color r="255" g="255" b="255"/>
</Plane>