<Config threads="23" max_reflections="5" samplesPP="10" stretch="gamma"/>

<Camera w="0.5" h="0.5" H_Res="800" V_Res="800" fl="50" aperture="0.01" focus_dist="200.5">
    <position x="0" y="-1" z="200"/><!-- Camera position -->

    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="0"/> <!-- roll -->
</Camera>


<Mesh filename="skull_tri.obj" shininess="100" reflectivity="0.1" brdf="0">
    <position x="0" y="-4" z="0"/>
    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/>  <!-- pan -->
    <z_rot angle="0"/> <!-- roll -->
    <scale factor=".01"/> <!-- This scales the model up by factor -->
    <color r="200" g="5" b="5"/>
    <texture filename ="space.png"/>
</Mesh>


<Sphere radius = "1.5" shininess = "22" reflectivity = "0" brdf="0">
    <position x="-0.2" y="-1" z="-70"/>
    <color r="0" g="0" b="200"/>
    <emission r="0" g="0" b="0"/>
</Sphere>

<Sphere radius = "0.2" shininess = "22" reflectivity = "0" brdf="2">
    <position x="0.9" y="-1.8" z="15"/>
    <color r="200" g="200" b="200"/>
    <emission r="0" g="0" b="0"/>
</Sphere>


<Sphere radius = "0.6" shininess = "22" reflectivity = "0" brdf="0">
    <position x="-1.2" y="-1.8" z="0.5"/>
    <color r="255" g="0" b="200"/>
    <emission r="0" g="0" b="0"/>
</Sphere>


<!-- top emissive plane area light-->
<Plane w="150" l="150" shininess="50" reflectivity="0.9" brdf = "0">
    <position x="0" y="0.99" z="2"/>
    <x_rot angle="0"/> <!-- Tilt  + is down, - is up -->
    <y_rot angle="0"/> <!-- pan -->
    <z_rot angle="180"/> <!-- roll -->
    
    <color r="1" g="1" b="1"/>
    <emission r="100000" g="100000" b="100000"/>
</Plane>

<!-- back Plane -->
