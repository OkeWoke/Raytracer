<Config threads="8" max_reflections="4" stretch="gamma"/>
<Camera w="0.5" h="0.5" H_Res="1000" V_Res="1000" fl="10">
    <position x="0" y="5" z="300"/><!-- Camera position -->
    
    <!-- The following 3 vectors define camera rotation and pointing direction, if you change these values odd things may happen-->
    <u x="1" y="0" z="0"/> <!-- vertical camera dir -->
    <v x="0" y="-1" z="-0.01"/> <!-- Horizontal camera dir -->
    <n x="0" y="-0.01" z="1"/> <!-- Camera looks in this vector dir -->
</Camera>

<Light>
    <position x="0" y="20" z="40"/>
    <color r="255" g="255" b="5"/>
</Light>

<Sphere radius="25" shininess="20" reflectivity="0.6">
    <position x="0" y="-20" z="-100"/>
    <color r="0" g="200" b="0"/>
</Sphere>

<Sphere radius="20" shininess="200" reflectivity="1">
    <position x="0" y="30" z="-200"/>
    <color r="200" g="0" b="200"/>
</Sphere>

<Mesh filename="torus-2.obj">

</Mesh>

<!-- Bottom Plane-->
<Plane w="0" l="0" shininess="20" reflectivity="0.31">
    <normal x="0" y="1" z="0" />
    <position x="0" y="-2" z="0"/>
    <color r="255" g="0" b="0"/>
</Plane>

<!-- top -->
<Plane w="0" l="0" shininess="20" reflectivity="0.31">
    <normal x="0" y="-1" z="0" />
    <position x="0" y="30" z="0"/>
    <color r="0" g="0" b="255"/>
</Plane>

<!--left-->
<Plane w="0" l="0" shininess="20" reflectivity="0.31">
    <normal x="1" y="0" z="0" />
    <position x="-10" y="0" z="0"/>
    <color r="255" g="255" b="0"/>
</Plane>

<!--right-->
<Plane w="0" l="0" shininess="20" reflectivity="0.31">
    <normal x="-1" y="0" z="0" />
    <position x="10" y="0" z="0"/>
    <color r="30" g="30" b="30"/>
</Plane>