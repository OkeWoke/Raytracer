    <!-- The following 3 vectors define camera rotation and pointing direction, if you change these values odd things may happen-->
    <!--<u x="1" y="0" z="-0.1"/> <!-- vertical camera dir -->
    <!--<v x="0.12" y="-1" z="0"/> <!-- Horizontal camera dir -->
    <!--<n x="0.1" y="0.12" z="1"/> <!-- Camera looks in this vector dir -->
