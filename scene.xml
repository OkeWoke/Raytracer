<!-- Example XML -->
<!-- Camera, w and h is the 'sensor' dimensions.
     H_RES and V_RES are horizontal and vertical pixel resolution
     fl is the focal length of the camera, smaller number means wider fov.
-->
<Config threads="8" max_reflections="4" stretch="gamma"/>
<Camera w="0.5" h="0.5" H_Res="1000" V_Res="1000" fl="2">
    <position x="0" y="0" z="-80"/><!-- Camera position -->
    
    <!-- The following 3 vectors define camera rotation and pointing direction, if you change these values odd things may happen-->
    <u x="1" y="0" z="0"/> <!-- vertical camera dir -->
    <v x="0" y="1" z="-0.01"/> <!-- Horizontal camera dir -->
    <n x="0" y="-0.01" z="-1"/> <!-- Camera looks in this vector dir -->
</Camera>


<Light>
    <position x="0" y="0" z="400"/>
    <ambient r="1" g="1" b="1"/>
    <diffuse r="20" g="20" b="20"/>
    <specular r="10" g="10" b="10"/>
</Light>

<Light>
    <position x="0" y="-50" z="800"/>
    <ambient r="1" g="1" b="1"/>
    <diffuse r="20" g="20" b="20"/>
    <specular r="10" g="10" b="10"/>
</Light>

<Sphere radius="25" shininess="100" reflectivity="0">
    <position x="0" y="-20" z="500"/>
    <ambient r="0" g="1" b="0"/>
    <diffuse r="0" g="200" b="0"/>
    <specular r="255" g="200" b="200"/>
</Sphere>

<Sphere radius="20" shininess="200" reflectivity="1">
    <position x="0" y="30" z="550"/>
    <ambient r="1" g="0" b="1"/>
    <diffuse r="200" g="0" b="200"/>
    <specular r="255" g="255" b="255"/>
</Sphere>


<!-- Top Plane-->
<Plane w="0" l="0" shininess="200" reflectivity="00">
    <normal x="0" y="-1" z="0" />
    <position x="0" y="60" z="0"/>
    <ambient r="0" g="0" b="1"/>
    <diffuse r="0" g="0" b="255"/>
    <specular r="255" g="255" b="255"/>
</Plane>



